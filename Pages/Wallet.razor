@page "/wallet"


@inherits WalletBase
<br /><br /><br />
<h1>Wallet</h1>
<p>Owner: <span id="imeKorisnika">@podaci.Name</span></p>
<p>Estimated in $: <strong>@valueInDollars</strong></p>
<p id="ovden"></p>
<button class="btn btn-warning" @onclick="@Button_Click">@ButtonText</button>
<br />
<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <table class="table table-hover bg-white">
        <tbody>
            <tr>
                <th scope="row"></th>
                <td>USD Coin</td>
                <td></td>
                <td><img src="img/usdCoinLogo.png" class="slike" /></td>
                <td>@podaci.USDC</td>
            </tr>
            <tr>
                <th scope="row">1</th>
                <td>Bitcoin</td>
                <td></td>
                <td><img src="img/bitcoinLogo.png" class="slike" /></td>
                <td>@podaci.BTC</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Litecoin</td>
                <td></td>
                <td><img src="img/litecoinLogo.png" class="slike" /></td>
                <td>@podaci.LTC</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Ethereum</td>
                <td></td>
                <td><img src="img/ethereumLogo.png" class="slike" /></td>
                <td>@podaci.ETH</td>
            </tr>
            <tr>
                <th scope="row">4</th>
                <td>EOS</td>
                <td></td>
                <td><img src="img/eos.png" class="slike" /></td>
                <td>@podaci.EOS</td>
            </tr>
            <tr class="@CssClass">
                <th scope="row">5</th>
                <td>ZRX</td>
                <td style="color:darkgrey">not tradeable</td>
                <td><img src="img/zrx.png" class="slike" /></td>
                <td></td>
            </tr>
            <tr class="@CssClass">
                <th scope="row">6</th>
                <td>Basic Attention Token</td>
                <td style="color:darkgrey">not tradeable</td>
                <td><img src="img/batLogo.png" class="slike" /></td>
                <td></td>
            </tr>
            <tr class="@CssClass">
                <th scope="row">7</th>
                <td>Dai</td>
                <td style="color:darkgrey">not tradeable</td>
                <td><img src="img/daiLogo.png" class="slike" /></td>
                <td></td>
            </tr>
            <tr>
                <th scope="row">8</th>
                <td>Chainlink</td>
                <td></td>
                <td><img src="img/chainlinkLogo.png" class="slike" /></td>
                <td>@podaci.LINK</td>
            </tr>
            <tr class="@CssClass">
                <th scope="row">9</th>
                <td>Monero</td>
                <td style="color:darkgrey">not tradeable</td>
                <td><img src="img/monero.png" class="slike" /></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <MakeTransaction />
</div>
